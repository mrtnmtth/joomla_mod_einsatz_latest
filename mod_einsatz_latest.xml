<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.2" client="site" method="upgrade">
	<name>letzte Einsätze</name>
	<author>mattronic</author>
	<creationDate>March 2016</creationDate>
	<copyright></copyright>
	<license>GNU/GPL</license>
	<version>1.0.1</version>
	<description>Modul zur Anzeige einer Liste der letzten Einsätze der Einsatzkomponente.</description>
	<files>
		<filename module="mod_einsatz_latest">mod_einsatz_latest.php</filename>
		<filename>helper.php</filename>
		<filename>index.html</filename>
		<filename>tmpl/default.php</filename>
		<filename>tmpl/index.html</filename>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="count" type="text" default="5" label="Anzahl anzuzeigender Einsätze" description="Anzahl anzuzeigender Einsätze" />
				<field name="menu_none" type="text" default="Noch keine Einsätze vorhanden." label="Text falls noch kein Einsatz vorhanden" description="Text falls noch kein Einsatz vorhanden" />
				<field name="date1" type="radio" default="1" label="Einsatzzeit anzeigen" description="Einsatzzeit anzeigen">
					<option value="0">Nein</option>
					<option value="1">Ja</option>
				</field>
				<field name="einsatzart" type="radio" default="1" label="Einsatzart anzeigen" description="Einsatzart anzeigen">
					<option value="0">Nein</option>
					<option value="1">Ja</option>
				</field>
				<field name="address" type="radio" default="1" label="Einsatzort anzeigen" description="Einsatzort anzeigen">
					<option value="0">Nein</option>
					<option value="1">Ja</option>
				</field>
				<field name="summary" type="radio" default="0" label="Kurzbeschreibung anzeigen" description="Kurzbeschreibung anzeigen">
					<option value="0">Nein</option>
					<option value="1">Ja</option>
				</field>
				<field name="desc" type="radio" default="0" label="ausführliche Einsatzbeschreibung anzeigen" description="ausführliche Einsatzbeschreibung anzeigen">
					<option value="0">Nein</option>
					<option value="1">Ja</option>
				</field>
				<field name="maxchar" type="text" default="250" label="Maximale Anzahl der Zeichen in der Beschreibung" description="Maximale Anzahl der Zeichen in der Beschreibung" />
				<field name="readontext" type="text" default="" label="Weiterlesen-Linktext" description="Feld bitte leer lassen, um keinen Weiterlesen-Link anzuzeigen" />
				<field name="separator" type="list" default="1" label="Trennlinie" description="Trennlinie zwischen den Einsätzen">
					<option value="0">keine</option>
					<option value="1">gestrichelt</option>
					<option value="2">durchgezogen</option>
				</field>
				<field name="separatorcolor" type="color" default="#333" showon="separator:1,2" label="Trennlinienfarbe" description="Farbe der Trennlinien" />
				<field name="line1" type="spacer" hr="true" />
				<field name="bild" type="radio" default="1" label="Einsatzbilder anzeigen" description="Wenn ja ausgewählt ist, wird jeweils das im Einsatzbericht zuerst ausgewählte Bild angezeigt">
					<option value="0">Nein</option>
					<option value="1">Ja</option>
				</field>
				<field name="bild_breite" type="text" default="100px" showon="bild:1" label="Breite der Bilder (z.B. 100px)" description="" />
				<field name="bild_float" type="radio" default="right" showon="bild:1" label="Float der Bilder" description="">
					<option value="left">links</option>
					<option value="right">rechts</option>
				</field>
				<field name="line2" type="spacer" hr="true" />
				<field name="label1" type="spacer" label="&lt;b&gt;CSS-Einstellungen&lt;/b&gt;" />
				<field name="templatecolor" type="radio" default="1" label="Template überschreiben" description="Templatefarbe laden">
					<option value="0">ja (Werte unten benutzen)</option>
					<option value="1">nein</option>
				</field>
			</fieldset>
			<fieldset name="advanced">
				<field name="moduleclass_sfx" type="text" default="" label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL" description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
				<field name="modulewidth" type="text" default="100%" label="Modulbreite" description="Breite des Moduls (z.B. 100% oder 240px)" />
			</fieldset>
		</fields>
	</config>

	<updateservers>
		<server type="extension" name="letzte Einsätze Updates">https://raw.githubusercontent.com/mttronc/joomla_mod_einsatz_latest/master/update.xml</server>
	</updateservers>
</extension>
