<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="2.5.0" client="site" method="upgrade">
	<name>Reports2 latest</name>
	<author>mattronic</author>
	<creationDate>March 2014</creationDate>
	<copyright></copyright>
	<license>GNU/GPL</license>
	<version>0.1</version>
	<description>Ein Modul zur Anzeige einer Liste der letzten Einsätze für die Komponente com_reports2.</description>
	<files>
		<filename module="mod_reports2_latest">mod_reports2_latest.php</filename>
		<filename>helper.php</filename>
		<filename>index.html</filename>
		<filename>tmpl/default.php</filename>
		<filename>tmpl/index.html</filename>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="count" type="text" default="5" label="Anzahl anzuzeigender Einsätze" description="Anzahl anzuzeigender Einsätze" />
				<field name="menu_none" type="text" default="Noch keine Einsätze vorhanden." label="Text falls noch kein Einsatz vorhanden" description="Text falls noch kein Einsatz vorhanden" />
				<field name="data1" type="radio" default="1" label="Einsatzart anzeigen" description="Einsatzart anzeigen">
					<option value="0">Nein</option>
					<option value="1">Ja</option>
				</field>
				<field name="address" type="radio" default="1" label="Einsatzort anzeigen" description="Einsatzort anzeigen">
					<option value="0">Nein</option>
					<option value="1">Ja</option>
				</field>
				<field name="summary" type="radio" default="0" label="Kurzbeschreibung anzeigen" description="Kurzbeschreibung anzeigen">
					<option value="0">Nein</option>
					<option value="1">Ja</option>
				</field>
				<field name="maxchar" type="text" default="100" label="Maximale Anzahl der Zeichen in der Beschreibung" description="Maximale Anzahl der Zeichen in der Beschreibung" />
				<field name="readontext" type="text" default="" label="Weiterlesen-Linktext" description="Feld bitte leer lassen, um keinen Weiterlesen-Link anzuzeigen" />
				<field name="umbruch" type="radio" default="0" label="mit Zeilenumbruch anzeigen?" description="mit Zeilenumbruch anzeigen?">
					<option value="0">Nein</option>
					<option value="1">Ja</option>
				</field>
				<field name="line1" type="spacer" hr="true" />
				<field name="bild" type="radio" default="1" label="Einsatzbilder anzeigen" description="Wenn ja ausgewählt ist, wird jeweils das im Einsatzbericht zuerst ausgewählte Bild angezeigt">
					<option value="0">Nein</option>
					<option value="1">Ja</option>
				</field>
				<field name="bild_breite" type="text" default="100px" label="Breite der Bilder (z.B. 100px)" description="" />
				<field name="bild_float" type="radio" default="left" label="Float der Bilder" description="">
					<option value="left">links</option>
					<option value="right">rechts</option>
					<option value="none">unterhalb</option>
				</field>
				<field name="tabelle" type="radio" default="1" label="Tabellenrahmen zeichnen" description="Tabellenrahmen anzeigen">
					<option value="0">Nein</option>
					<option value="1">Ja</option>
				</field>
				<field name="line2" type="spacer" hr="true" />
				<field name="label1" type="spacer" label="&lt;b&gt;CSS-Einstellungen&lt;/b&gt;" />
				<field name="templatecolor" type="radio" default="1" label="Template überschreiben" description="Templatefarbe laden">
					<option value="0">ja (Werte unten benutzen)</option>
					<option value="1">nein</option>
				</field>
				<field name="color_text" type="text" default="ffffff" label="Textfarbe : #" description=""></field>
				<field name="color_alert" type="text" default="ff0000" label="Farbe Einsatzart: #" description="Farbe der Einsatzart"></field>
			</fieldset>
			<fieldset name="advanced">
				<field name="moduleclass_sfx" type="text" default="" label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL" description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
			</fieldset>
		</fields>
	</config>
</extension>
